<div class="nvbr">
  <div class="nvbr-logo">
    <%= link_to home_path, class: "nvbr-brand" do %>
      <%= image_tag "words_logo.svg" %>
    <% end %>
  </div>
  <div class="nvbr-controls">
    <% if user_signed_in? %>
      <%= link_to "Create a task", new_task_path, class: "btn mx-2", id: "navbar-btn" %>
      <%= link_to "Home", home_path, class: "btn mx-2", id: "navbar-btn" %>
      <%= link_to "Dashboard", dashboard_path, class: "btn mx-2", id: "navbar-btn" %>
      <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn mx-2", id: "navbar-btn-log" %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "btn mx-5", id: "navbar-btn-log" %>
    <% end %>
  </div>
</div>
