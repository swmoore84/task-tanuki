<div class="container">
  <div class="row mt-5">
    <div class="col-4">
      <div class="card sticky-top" style="height: 75vh;">
        <div class="card-body d-flex flex-column align-items-center">
          <div class="row d-flex justify-content-center mt-2">
            <div class="avatar mb-4" style="background-color: gray; height: 150px; width: 150px"></div>
          </div>
          <h5 class="card-title">Welcome <%= (@user? @user.email : "Guest") %></h5>
          <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
          <% if user_signed_in? %>
            <%= link_to "My dashboard", dashboard_path, { class: "btn btn-outline-primary btn-sm" } %>
          <% else %>
            <%= link_to "Register an account!", new_user_registration_path, { class: "btn btn-outline-primary btn-sm" } %>
          <% end %>
        </div>
      </div>
    </div>

<!-- This is a loop to create the cards for each task -->

    <div class="col-8 d-flex flex-wrap justify-content-around">
        <% @tasks.each do |task| %>
          <%= link_to task_path(task), {style: "text-decoration:none"} do %>
          <%= '<div class="card mb-4" style="width: 14rem;">'.html_safe %>
            <%#= '<img class="card-img-top" src="logo.png" alt="Card image cap">'.html_safe %>
            <%= '<div style="background-color:gray; width: 100%; height: 150px;"></div>'.html_safe %>

            <%= '<div class="card-body">'.html_safe %>
            <h5 class="card-title"> <%= task.title %> </h5>
            <p class="card-text"> <%= task.description[0..70] %>... </p>
            <%= '</div>'.html_safe %>
           <%= '</div>'.html_safe %>
           <% end %>
        <% end %>
    </div>


  </div>
</div>


