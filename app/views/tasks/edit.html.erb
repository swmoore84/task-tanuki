<div class="container">
  <div class="card col-6 d-flex mx-auto my-5">
<!--     <div class="align-items-center justify-content-center"> -->
    <div class="card-body">
      <h3 class="card-title d-flex justify-content-center">Edit task</h3>
      <%= simple_form_for [@task] do |f| %>
        <%= f.input :title, label: 'Title', error: 'Please enter a title' %>
        <%= f.input :category, collection: ["Education", "Housework", "Moving", "Other", "Photography", "Shopping", "Translation",
         "Local guides", "Experiences", "Health and Beauty", "Maintenance"], label: 'Category', error: 'Please select a category' %>
        <%= f.input :description, label: 'Description', error: 'Please enter a description' %>
        <%= f.input :price, label: 'Price', error: 'Please enter a price' %>
        <%= f.input :remote_job, as: :radio_buttons %>
        <%= f.input :location %>
        <%= f.input :due_date %>
        <div class="row mt-4 d-flex justify-content-around">
          <%= f.button :submit, { class: "btn btn-primary" } %>
          <%= link_to "Back to home", home_path, { class: "btn btn-primary" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
